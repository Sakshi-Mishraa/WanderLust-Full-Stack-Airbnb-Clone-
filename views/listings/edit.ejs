<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br/><br/>
        <h3>Edit Your Listing </h3>
        <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="md-3">
                <lable for="title" class="form-label">Title</lable>
                <input name="title" value="<%=listing.title%>" type="text" class="form-control" required>
            </div>
            <div class="md-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="description" type="text" class="form-control" required><%=listing.description%></textarea>
            </div>
            <div class="md-3">
                <p>Original Listing Image</p>
                <hr>
                <div class="image-gallery">
                 <% for(let image of listing.image){%>
                     <img class="gallery-img" src="<%=image.url%>" src="<%=image.url%>" alt="List Image">
                 <%}%>
                </div>
            </div>
           <hr>
           <div class="md-3">
            <lable for="image" class="form-label">Upload New Image</lable>
            <input name="image" type="file" class="form-control" multiple>
           </div>
           <div class="row">
            <div class="md-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input name="price" value="<%=listing.price%>" class="form-control" required>
            </div>
            <div class="md-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input name="country" value="<%=listing.country%>" type="text" class="form-control" required>
            </div>
           </div>
           
           <div class="md-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="location" value="<%=listing.location%>" type="text" class="form-control" required>
           </div>
           
           <br/><br/>
           <button class="btn btn-dark add-btn">Edit Listing</button> 
           <br/><br/>
        </form>
        </div>
        </div>
</body>
