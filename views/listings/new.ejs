<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
    <div class="col-8 offset-2">
        <br/><br/>
    <h3>Create A New List </h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="md-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="title" placeholder="Add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Add A Title
            </div>
        </div>
        <div class="md-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="description" placeholder="Enter Description" type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Add short description according to the place.
            </div>
        </div>
       <div class="md-3">
         <label for="image" class="form-label">Upload Listing Image</label>
         <input id="image" name="image" type="file" class="form-control" multiple required>
       </div>
       <div class="row">
        <div class="md-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="price" placeholder="1200" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Price should be valid
            </div>
        </div>
        <div class="md-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="country" placeholder="India" type="text" class="form-control" required>
        </div>
       </div>
       
       <div class="md-3">
        <lable for="location" class="form-label">Location</lable>
        <input name="location" placeholder="Jaipur , Rajasthan" type="text" class="form-control" required>
       </div>
       <br/><br/>
       <button class="btn btn-dark add-btn">Add Listing</button> 
       <br/><br/>
    </form>
    </div>
    </div>
</body>